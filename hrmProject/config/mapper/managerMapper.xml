    </select>





                                      <!--  培训的增删改查-->
    <insert id="addTrain" parameterType="Train">
        INSERT INTO train(name, traindate, department)  VALUES (#{name},#{trainTime},#{department})
    </insert>

    <delete id="deleteTrain" parameterType="Integer">
        DELETE  FROM train WHERE id=#{id}
